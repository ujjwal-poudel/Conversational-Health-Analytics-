# ===================================
# Conversational Health Analytics - Environment Variables
# ===================================
# Copy this file to .env and fill in your values.
# All paths are relative to the backend/ directory.

# ===================================
# LLM Configuration (pick one)
# ===================================
GROQ_API_KEY=your_groq_api_key_here
# GEMINI_API_KEY=your_gemini_api_key_here

# ===================================
# Audio Configuration
# ===================================
# Piper TTS - 'piper' uses system PATH (pip install piper-tts)
PIPER_EXECUTABLE_PATH=piper
PIPER_MODEL_PATH=models/piper/en_US-lessac-medium.onnx

# Whisper STT model size: tiny, base, small, medium, large
WHISPER_MODEL_SIZE=small

# ===================================
# Firebase Configuration
# ===================================
# Path to your Firebase service account JSON file
FIREBASE_CREDENTIALS_PATH=your-firebase-credentials.json

# ===================================
# Depression Model Configuration
# ===================================
ROBERTA_MODEL_PATH=models/roberta/model_2_13.pt
TOKENIZER_NAME=sentence-transformers/all-distilroberta-v1